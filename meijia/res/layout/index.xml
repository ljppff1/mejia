<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res/com.example.meijia"
    >

    
	 <RelativeLayout
	     android:id="@+id/re_head"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content" >

	     <ImageView
	         android:id="@+id/loginhead"
	         android:layout_width="fill_parent"
	         android:layout_height="50dip"
	         android:layout_centerInParent="true"
	         android:background="@drawable/skinpic_blue" />
         
	     
	     <TextView 
	      android:layout_width="wrap_content"
	      android:layout_height="50dp"
	       android:textSize="18sp" 
	       android:id="@+id/mTvlocal"
	       android:text="@string/local"
	       	         android:layout_centerVertical="true"
	       	         android:gravity="center_vertical"
	        android:textColor="@color/white"
	        android:paddingLeft="5dp"
	         />
	     
	     
	     <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content" 
	         android:layout_centerVertical="true"
	         android:layout_centerHorizontal="true"
	         android:text="@string/login_title"
	         android:textColor="@color/white"
	         android:textSize="20sp" />
	 </RelativeLayout>
    
    
<ScrollView 
    android:layout_width="fill_parent"
            android:background="@color/white"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:padding="15.0dip"
                    android:src="@drawable/dot" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:padding="15.0dip"
                    android:src="@drawable/dot" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:padding="15.0dip"
                    android:src="@drawable/dot" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:padding="15.0dip"
                    android:src="@drawable/dot" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical" >
                
                <com.example.mejia.util.HomeButton
                    android:id="@+id/hotel"
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    ptr:backcolor="0"
                    ptr:big="true"
                    ptr:home="0"
                    ptr:text="预约服务"
                    ptr:textSize="24sp" />

                <com.example.mejia.util.HomeButton
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="8dp"
                    ptr:backcolor="1"
                    ptr:big="true"
                    ptr:home="1"
                    ptr:text="美容"
                    ptr:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical" >

                <com.example.mejia.util.HomeButton
                    android:layout_width="200dp"
                    android:layout_height="146dp"
                    ptr:backcolor="3"
                    ptr:big="false"
                    ptr:home="3"
                    ptr:text="美甲"
                    ptr:textSize="24sp" />

                <com.example.mejia.util.HomeButton
                    android:layout_width="200dp"
                    android:layout_height="146dp"
                    android:layout_marginTop="8dp"
                    ptr:backcolor="4"
                    ptr:big="true"
                    ptr:home="4"
                    ptr:text="美睫"
                    ptr:textSize="24sp" />

                <com.example.mejia.util.HomeButton
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="8dp"
                    ptr:backcolor="5"
                    ptr:big="false"
                    ptr:home="5"
                    ptr:text="美足"
                    ptr:textSize="24sp" />

                
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
</LinearLayout>